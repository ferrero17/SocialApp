<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.ProfileActivity"
    android:background="@color/colorPrimaryDark">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/useravatar"
            android:layout_width="200px"
            android:layout_height="190px"
            android:adjustViewBounds="true"
            android:layout_margin="16dp"/>

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/useravatar"
            android:layout_margin="16dp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username"
            android:id="@+id/estadisticasLay"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Posts publicados: "
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_margin="16dp"
                android:id="@+id/postsPublicados"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_margin="16dp"
                android:id="@+id/cifraPublicados"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/estadisticasLay"
            android:id="@+id/estadisticasLayFav"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total de favoritos: "
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_margin="16dp"
                android:id="@+id/totalFav"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_margin="16dp"
                android:id="@+id/cifraFav"
                />

        </LinearLayout>


        <Button
            android:id="@+id/sign_out2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/estadisticasLayFav"
            android:layout_margin="100dp"
            android:text="SIGN OUT" />


    </RelativeLayout>



</ScrollView>
</RelativeLayout>